<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#64CFFF"
    android:backgroundTint="#64CFFF"
    tools:context=".ProviderRegistration">


    <Button
        android:id="@+id/btn_register"
        android:layout_width="209dp"
        android:layout_height="59dp"
        android:background="@drawable/button_gradient"
        android:text="Publish Vacancy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.238" />

    <EditText
        android:id="@+id/editTextTextPostalAddress2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_corner_rectangle"
        android:backgroundTint="@color/light_blue_50"
        android:hint="Job Position"
        android:padding="10dp"
        android:textColor="@color/light_blue_900"
        android:textColorHint="@color/light_blue_900"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_corner_rectangle"
        android:backgroundTint="@color/light_blue_50"
        android:hint="Salary"
        android:padding="10dp"
        android:textColor="@color/light_blue_900"
        android:textColorHint="@color/light_blue_900"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPostalAddress2"
 />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rounded_corner_rectangle"
        android:backgroundTint="@color/light_blue_50"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="@color/light_blue_900"
        android:textColorHint="@color/light_blue_900"
        android:layout_margin="16dp"
        android:ems="10"
        android:hint="Description"
        android:gravity="top"
        android:inputType="textImeMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine"
 />

</androidx.constraintlayout.widget.ConstraintLayout>