<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue_50"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#E9E9E9"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_logo"
            android:layout_marginLeft="16dp"
            android:text="Company Name"
            android:textColor="@color/light_blue_900"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_logo"
            android:layout_below="@id/txt_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text="Job Name"
            android:textColor="@color/light_blue_900"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_job_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_logo"
            android:layout_below="@id/txt_job_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:text="Job description. This is where a description of the job goes"
            android:textColor="@color/light_blue_900"
            android:textSize="12sp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
